---
import Layout from "../../layouts/Layout.astro";
---

<Layout pageTitle="projects" bg="#FFFEDB">
	<nav id="navbar" class="flex justify-between text-[48px] tracking-[-2px] border-b-2 border-black fixed w-full pb-[100px] transition-all">
		<div class="flex gap-4">
			<a href="/">HOME</a>
			<a href="projects">PROJECTS</a>
		</div>
		<div class="w-screen absolute top-[48px] transition-all" id="svg-wrapper">
			<svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
				<text class="transition-all" id="svg-text" textLength="100%" x="50%" y="50%" text-anchor="middle" alignment-baseline="middle" dominant-baseline="middle"  fill="none" stroke="#000000" stroke-width="2" font-size="144">WRITINGS</text>
			</svg>
		</div>
		<a href="contact">CONTACT</a>
	</nav>
	
	<main class="pt-[172px] h-[200vh] transition-all" id="main-content">
		hello
	</main>

	<script>
		window.onscroll = function () {
			const scrollPosition = window.scrollY;
      		const svgText = document.querySelector("#svg-text");
			const svgWrapper = document.getElementById("svg-wrapper");
			const navbar = document.getElementById("navbar");
			const mainMain = document.getElementById("main-content")

			if (scrollPosition > 0) {
				svgText!.setAttribute("fill", "#000");
				svgText!.setAttribute("stroke-width", "0");
				svgText!.setAttribute("textLength", "0");
				svgText!.setAttribute("font-size", "48");
				svgWrapper!.classList.add("top-0");
				svgWrapper!.classList.add("h-full");
				navbar!.classList.add("pb-0");
				mainMain!.classList.add("pt-[72px]");
			} else {
				svgText!.setAttribute("fill", "none");
				svgText!.setAttribute("stroke-width", "2");
				svgText!.setAttribute("textLength", "100%");
				svgText!.setAttribute("font-size", "144");
				svgWrapper!.classList.remove("top-0");
				svgWrapper!.classList.remove("h-full");
				navbar!.classList.remove("pb-0");
				mainMain!.classList.remove("pt-[72px]");
			}
		};
	</script>


</Layout>